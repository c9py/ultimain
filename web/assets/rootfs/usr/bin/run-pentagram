#!/bin/sh
# Pentagram (Ultima VIII) launcher script for CheerpX

export HOME=/root
export PATH=/usr/bin:/bin
export LD_LIBRARY_PATH=/lib:/usr/lib
export SDL_VIDEODRIVER=x11

# Set game data path if provided
if [ -n "$PENTAGRAM_GAME_PATH" ]; then
    cd "$PENTAGRAM_GAME_PATH"
else
    cd /game
fi

# Run Pentagram with any passed arguments
exec /usr/bin/pentagram "$@"
